        <div class="form-group">
            <label for="exampleInputTitle" style="color:white">제목</label>
            <input type="text" name = "title_of_post" class="form-control" id="exampleInputTitle" placeholder="<%= @post.title %>">
        </div>
        <p></p>
        <div class="form-group">
            <label for="exampleTextarea" style="color:white">내용</label>
            <textarea name="textarea_of_post" class="form-control" id="exampleTextarea" rows="5" placeholder="<%= @post.content %>"></textarea>
        </div>
        <div class="form-group">
            <label for="InputFile" style="color:white">사진 첨부</label>
            <input name="picture" type="file" class="form-control-file" id="InputFile" style="color:white">
        </div>
        <center><button type="submit" class="btn btn-primary">Submit</button></center>
    </form>
</div>
<div class="footer"></div>
